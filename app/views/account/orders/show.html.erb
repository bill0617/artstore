<div class="row">
  <div class="col-md-12">
    <h2>訂單明細</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品明細</th>
          <th>數量</th>
          <th>單價</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |item| %>
        <tr>
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= @order.total %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="clearfix">
      <span class="pull-right">總計:
        <span style="font-size:22px; color:red"><%= @order.total %> </span>
      NTD</span>
    </div>

    <hr>

    <h2>寄送明細</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>訂購人</td>
        </tr>
        <tr>
          <td>
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
        <tr>
          <td>收貨人</td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %> - <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
    <% if !@order.is_paid? %>
    <div class="pull-right">
      <%= link_to "信用卡付款", pay_with_credit_cart_order_path(@order.token),method: :post, class: "btn btn-lg btn-info"  %>
      <%= link_to "ATM轉帳", "#", class: "btn btn-lg btn-info"  %>
    </div>
    <% else %>
    <p class="text-center" style="font-size:23px; color:gray;">*** 此訂單已付款完成 ***</p>
    <% end %>
  </div>
</div>
