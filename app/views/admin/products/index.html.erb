<h2>Product List</h2>
  <div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to "New Product", new_admin_product_path, class: "btn btn-primary btn-sm" %>
  </div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th width="80">ï¼ƒ</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody><% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%= link_to product_path(product), class: "thumbnail" do  %>
        <% if product.photo.present? %>
        <%= image_tag(product.photo.image.thumb.url) %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
      <% end %>
      <% end %>
      </td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-warning btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
