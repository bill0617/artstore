<div class="row">
  <div class="col-md-6">
    <% if @product.photo.present? %>
        <%= image_tag(@product.photo.image.medium.url) %>
      <% else %>
        <%= image_tag("http://placehold.it/300x300&text=No Pic") %>
      <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @product.title %> </h2>
    <div style="height:130px;">
      <p>
        <%= simple_format(@product.description) %>
      </p>
    </div>
    <div> 數量 : <%= @product.quantity %> </div>
    <div class="product-price"> $ <%= @product.price %> </div>
    <div class="pull-right">
    <% if @product.quantity > 0 %>
      <%= link_to("加入購物車", add_cart_product_path(@product), method: :post, :class => "btn btn-danger btn-lg") %>
    <% else %>
    <span class="sale_out">此商品目前無庫存</span>
      <% end %>
    </div>
  </div>
</div>


