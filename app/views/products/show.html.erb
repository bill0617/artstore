<div class="row">
  <div class="col-md-6">
      <%= image_tag(@product.image.url(:medium), class: "thumbnail") %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>

   <div style="height:120px">
      <p><%= simple_format(@product.description) %></p>
  </div>
  <div>數量： <%= @product.quantity %></div>
  <div class="price">NT$ ： <%= @product.price %></div>
  <div class="pull-right"><%= link_to("加入購物車", "#", class: "btn btn-danger btn-lg") %></div>
</div>
</div>

